{
    "compilerOptions": {
        "target": "ESNext",
        "module": "node16", // Use CommonJS instead of NodeNext
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        // "resolveJsonModule": true,
        "skipLibCheck": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "include": [
        "./src/**/*.ts",
        "eslint.config.mjs"
    ],
    "exclude": [
        "node_modules"
    ]
}